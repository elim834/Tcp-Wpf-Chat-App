<UserControl x:Class="EntryPopUp.SignInPop"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:EntryPopUp"
             mc:Ignorable="d"
             d:DesignHeight="400" d:DesignWidth="400">
    <Grid>
        <Border Background="LightSkyBlue"  Padding="10">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock  Text="Sign In" FontSize="20" Foreground="DarkCyan" FontWeight="Bold" HorizontalAlignment="Center"/>
            <Label FontSize="13" Foreground="DarkCyan"> Username:</Label>
            <TextBox Name="NameTextBox" Width="400" Height="Auto" Margin="5" /> 
            <Button Name="SignInButton" Content="Sign In " Foreground="DarkCyan"  VerticalAlignment="Bottom" 
                   Background="Bisque" Margin="10" Click = "SignInClick ">  </Button>
            <TextBlock Name="MessageTextBlock" TextWrapping="Wrap" Width="300" TextAlignment="Center" Background="LightSkyBlue" Foreground="DarkCyan" Height="40" ></TextBlock>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>
